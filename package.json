{
  "name": "rest-express",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "NODE_ENV=development node server.js",
    "build": "vite build",
    "start": "node server.js",
    "check": "tsc",
    "create-admin": "node scripts/createAdmin.js",
    "test": "jest --detectOpenHandles --forceExit",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest --coverage --detectOpenHandles --forceExit",
    "test:integration": "jest tests/comprehensive-tests.js --detectOpenHandles --forceExit",
    "docker:build": "docker build -t infinitybox .",
    "docker:run": "docker run -p 3000:3000 infinitybox",
    "docker:compose": "docker-compose up -d",
    "docker:compose:dev": "docker-compose -f docker-compose.yml up",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "render:deploy": "git push origin main",
    "health": "curl http://localhost:3000/health || echo 'Server not running'",
    "backup": "node -e \"require('http').request({hostname:'localhost',port:3000,path:'/api/admin/backup/create',method:'POST',headers:{'Authorization':'Bearer '+process.env.ADMIN_TOKEN}}).end()\"",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "pre-deploy": "node pre-deploy-check.js",
    "deploy:check": "npm run pre-deploy && npm run test",
    "deploy:render": "npm run deploy:check && git push origin main"
  },
