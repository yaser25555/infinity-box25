# إعدادات الإنتاج لـ INFINITY BOX
# ملاحظة: هذا ملف مثال - لا تضع قيم حقيقية هنا

# إعدادات التطبيق الأساسية
NODE_ENV=production
PORT=3000

# قاعدة البيانات
MONGODB_URI=mongodb://your-mongodb-connection-string

# الأمان
JWT_SECRET=your-super-secret-jwt-key-here
SESSION_SECRET=your-super-secret-session-key-here

# Agora SDK للغرف الصوتية
AGORA_APP_ID=your-agora-app-id
AGORA_APP_CERTIFICATE=your-agora-app-certificate

# إعدادات التحسينات الجديدة
ENABLE_ANALYTICS=true
ENABLE_BACKUP=true
ENABLE_CACHE=true
ENABLE_SECURITY=true

# إعدادات الكاش
CACHE_TTL=300000
CACHE_MAX_SIZE=1000

# إعدادات النسخ الاحتياطي
BACKUP_INTERVAL=21600000
MAX_BACKUP_COUNT=24
BACKUP_PATH=/app/backups

# إعدادات الأمان
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100
SECURITY_BLOCK_DURATION=3600000

# إعدادات WebSocket
WS_HEARTBEAT_INTERVAL=30000
WS_TIMEOUT=60000
WS_MAX_CONNECTIONS=1000

# إعدادات التحليلات
ANALYTICS_SAVE_INTERVAL=300000
ANALYTICS_RETENTION_DAYS=30

# إعدادات الأداء
NODE_OPTIONS=--max-old-space-size=512
UV_THREADPOOL_SIZE=4

# إعدادات الصحة والمراقبة
HEALTH_CHECK_INTERVAL=30000
METRICS_COLLECTION_INTERVAL=60000

# إعدادات الملفات
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,mp3,wav

# إعدادات CORS
CORS_ORIGIN=https://infinitybox25.onrender.com
CORS_CREDENTIALS=true

# إعدادات SSL (إذا كنت تستخدم شهادات مخصصة)
SSL_ENABLED=false
SSL_CERT_PATH=/app/ssl/cert.pem
SSL_KEY_PATH=/app/ssl/key.pem

# إعدادات التسجيل
LOG_LEVEL=info
LOG_FILE_PATH=/app/logs/app.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5

# إعدادات قاعدة البيانات المتقدمة
DB_POOL_SIZE=10
DB_TIMEOUT=30000
DB_RETRY_ATTEMPTS=3

# إعدادات Redis (إذا كنت تستخدمه)
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600

# إعدادات البريد الإلكتروني (إذا كنت تستخدمه)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# إعدادات التخزين السحابي (إذا كنت تستخدمه)
CLOUD_STORAGE_PROVIDER=local
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=your-bucket-name
AWS_REGION=us-east-1

# إعدادات CDN (إذا كنت تستخدمه)
CDN_URL=https://your-cdn-url.com
STATIC_FILES_URL=/static

# إعدادات المراقبة الخارجية
MONITORING_ENABLED=false
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-newrelic-key

# إعدادات التحليلات الخارجية
GOOGLE_ANALYTICS_ID=your-ga-id
FACEBOOK_PIXEL_ID=your-fb-pixel-id

# إعدادات الدفع (إذا كنت تستخدمها)
PAYMENT_PROVIDER=none
STRIPE_PUBLIC_KEY=your-stripe-public-key
STRIPE_SECRET_KEY=your-stripe-secret-key
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret

# إعدادات الإشعارات
PUSH_NOTIFICATIONS_ENABLED=true
FCM_SERVER_KEY=your-fcm-server-key
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key

# إعدادات التطبيق المحمول
MOBILE_APP_ENABLED=false
MOBILE_API_VERSION=v1
MOBILE_DEEP_LINK_SCHEME=infinitybox

# إعدادات التجريب والاختبار
FEATURE_FLAGS_ENABLED=false
A_B_TESTING_ENABLED=false
BETA_FEATURES_ENABLED=false

# إعدادات الصيانة
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=النظام قيد الصيانة، يرجى المحاولة لاحقاً

# إعدادات المنطقة الزمنية
TZ=UTC
DEFAULT_LOCALE=ar
SUPPORTED_LOCALES=ar,en

# إعدادات الأمان المتقدمة
HELMET_ENABLED=true
CSRF_PROTECTION=true
XSS_PROTECTION=true
CONTENT_SECURITY_POLICY=true

# إعدادات ضغط البيانات
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6
COMPRESSION_THRESHOLD=1024
